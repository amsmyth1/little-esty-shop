<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h2><%= @repo %></h2>
    Contributors: <br>
    <% @contributors.each do |cont| %>
      * <%= cont.user_name %> - <%= ApiService.commit_objects(cont.user_name) %> Commits<br>
    <% end %>
    Pull Requests: <%= @pulls %>

    <%= link_to "All Merchant Dashboards", merchants_path %>
    <%= link_to "Admin Dashboard", admin_index_path %>

    <% flash.each do |type, message| %>
      <p class='flash-message'><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
